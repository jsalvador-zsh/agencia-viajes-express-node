extends ./layouts/index
block content

    h1(class="mt-5 text-center")= pagina
    main.container.mt-5 
        .row.proximos-viajes
            each viaje in viajes
                .col-md-6.col-lg-4.mb-4 
                    .card 
                        img.card-img-top(src=`img/destinos_${viaje.imagen}.jpg`, alt="imagen-viaje")
                        .card-body
                            h2=viaje.titulo
                            p
                                img(src="/icons/calendar.svg", alt="icono-calendario")

                                | #{viaje.fecha_ida} - #{viaje.fecha_vuelta}

                            p 
                                img(src="/icons/people.svg", alt="icono-people")

                                | #{viaje.disponibles}

                            p= viaje.descripcion.substr(0,120) + '...'

                            a(href=`viajes/${viaje.slug}`, class="btn btn-success btn-block") Más información